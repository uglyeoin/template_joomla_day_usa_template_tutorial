<?xml version="1.0" encoding="utf-8"?>
<extension type="template" version="3.8" client="site" method="upgrade">
    <name>Joomla! Day USA - How to build your own Joomla! Template</name>
    <version>1.0</version>
    <creationDate>20/08/2018</creationDate>
    <author>Eoin Oliver</author>
    <authorEmail>eoin@squareballoon.co.uk</authorEmail>
    <copyright>Eoin Oliver - but do what you want with this template</copyright>
    <description><![CDATA[TPL_JOOMLA_LONDON_XML_DESCRIPTION]]></description>

    <files>
        <filename>component.php</filename>
        <filename>error.php</filename>
        <filename>offline.php</filename>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <folder>languages</folder>
    </files>

    <positions>
        <position>offcanvas</position>
        <position>header</position>
        <position>mainBanner</position>
        <position>belowBanner</position>
        <position>middle</position>
        <position>bottom</position>
        <position>footer</position>
        <position>belowFooter</position>
        <position>debug</position>
    </positions>

    <languages folder="languages/en-GB">
        <language tag="en-GB">en-GB.tpl_joomladayusa.ini</language>
        <language tag="en-GB">en-GB.tpl_joomladayusa.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="sitedescription"
                       type="text"
                       default=""
                       label="JGLOBAL_DESCRIPTION"
                       description="JGLOBAL_SUBHEADING_DESC"
                       filter="string"/>
            </fieldset>
        </fields>
    </config>
</extension>
